<h2 class='title'><%= @student.first_name + " " + @student.last_name %>'s Profile</h2>

<ul class="student-info">
  <li><label>Grade level: </label> <%= @student.grade_level %></li>
  <li><label>Gender:</label> <%= @student.gender %> </li>
  <li><label>GPA:</label> <%= @student.gpa %></li>
  <li><label>Number of Detentions:</label> <%= @student.number_of_detentions %></li>

  <% if @student.teacher%>
    <li><label>Current teacher:</label> <%= link_to  "#{@student.teacher.full_name}", teacher_path(@student.teacher) %></li>
  <% end %>

  <li><label>Shirt size:</label> <%= @student.shirt_size %></li>
  <li><label>Email:</label> <%= @student.email %></li>
  <li><label>Interests:</label> <%= @student.interests %></li>
</ul>

<%= link_to 'Edit', edit_student_path(@student), class:"student-links" %> |
<%= link_to 'Delete', student_path(@student),
                      method: :delete,
                      data: { confirm: "Are you sure you want to delete #{@student.first_name} #{@student.last_name}?" }, class:"student-links" %>
